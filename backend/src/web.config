<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Serve static content and cache it -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
    </staticContent>

    <!-- If someone hits "/", serve the SPA entry by default -->
    <defaultDocument enabled="true">
      <files>
        <add value="public/index.html" />
      </files>
    </defaultDocument>

    <!-- Optional compression -->
    <httpCompression directory="%SystemDrive%\inetpub\temp\IIS Temporary Compressed Files">
      <scheme name="br" dll="%IIS_BIN%\brotli.dll" />
      <scheme name="gzip" dll="%IIS_BIN%\gzip.dll" />
      <dynamicTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
      </dynamicTypes>
      <staticTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
        <add mimeType="image/svg+xml" enabled="true" />
        <add mimeType="font/*" enabled="true" />
      </staticTypes>
    </httpCompression>

    <!-- Run Node (compiled entry) via iisnode -->
    <handlers>
      <add name="iisnode" path="dist/server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>

        <!-- 1) Let IIS serve existing files/dirs and anything under /public/* -->
        <rule name="StaticContent" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAny">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" />
            <add input="{REQUEST_URI}" pattern="^/public/.*" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- 2) API traffic (/api/...) -> Node -->
        <rule name="ApiToNode" stopProcessing="true">
          <match url="^api/.*" ignoreCase="true" />
          <action type="Rewrite" url="dist/server.js" />
        </rule>

        <!-- 3) SPA fallback: any other route -> public/index.html -->
        <rule name="SpaFallback" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="/public/index.html" />
        </rule>

      </rules>
    </rewrite>

    <!-- iisnode diagnostics (turn devErrorsEnabled off once stable) -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />

  </system.webServer>
</configuration>
